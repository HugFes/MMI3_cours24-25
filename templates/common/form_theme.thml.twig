{% use 'form_div_layout.html.twig' %}

{% block form_label %}
    {% set css_classes = (label_attr.class | default('')) ~ ' label' %}
    {% set label_attr = (label_attr ?? [])| merge({
        class: css_classes
    }) %}
    {{ parent() }}
{% endblock form_label %}

{% block form_widget_simple %}
    {% set type = type|default('text') %}
    {% set css_classes = (attr.class | default('')) ~ ' ' ~ type %}
    {% set label_attr = (attr ?? [])| merge({
        class: css_classes
    }) %}
    {{ parent() }}
{% endblock form_widget_simple %}