{% extends 'base.html.twig' %}

{% block title %}Édition de la catégorie : {% endblock %}

{% block breadcrumbs %}
    {% include 'common/_breadcrumb.html.twig' with { items: [
        { label: 'Home', href: path('home'), is_active: false},
        { label: 'Catégories', href: path('app_category_index'), is_active: false},
        { label: 'Édition', href: path('app_category_edit', {id: category.id}), is_active: true},
    ]} %}
{% endblock %}

{% block body %}
    <div class="container mb-2">
        <h1 class="title">Mise à jour de la catégorie : {{ category.name }}</h1>
    </div>

    <div>
        <div class="card">
            <div class="card-content">
                <div class="content">
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                    {% include 'category/common/_form.html.twig' %}
                    <a href="{{ path('app_category_index') }}" class="button is-danger">Annuler</a>
                    <button class="button is-primary" type="submit">Mettre à jour</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
