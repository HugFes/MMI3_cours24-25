
{% extends 'base.html.twig' %}

{% block title %}
    Création d'un jeu | Jeux vidéos
{% endblock %}

{% block breadcrum %}
    {% include 'video_game/common/_breadcrumb.html.twig' with { items: [
        { label: 'Home', href: 'home', is_active: false},
        { label: 'Jeux vidéos', href: path('app_video_game_index'), is_active: false},
        { label: 'Créer un jeux vidéo', href: path('app_video_game_new'), is_active: true},
    ]} %}
{% endblock %}

{% block body %}
    <div class="container mb-2">
        <h1 class="title">Créer un jeu vidéo</h1>
    </div>

    <div>
        <div class="card">
            <div class="card-content">
                <div class="content">
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                    {% include 'video_game/common/_form.html.twig' %}
                    <a href="{{ path('app_video_game_index') }}" class="button is-danger">Annuler</a>
                    <button class="button is-primary" type="submit">Créer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}



